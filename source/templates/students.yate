module "students"

match / {
	<div class="header">Список участников</div>
	for .students {
		apply .
	}
}

match .students {
	<div class="student post">
		if (.expanded) {
			<img width="250" src="{.photo}"/>
		} else {
			<img height="50" width="50" src="{.preview}"/>
		}
		<div class="caption">{.firstName} {.lastName}</div>
		if (.expanded) {
			<hr/>
			<div class="content">{.about}</div>
		}
	</div>
}